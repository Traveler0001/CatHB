            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "cmake",
            "label": "CMake: 安装",
            "command": "install",
            "preset": "Debug",
            "problemMatcher": [],
            "detail": "CMake 模板 安装 任务"
        }
    ]
